@model DoAn.Models.Scheduledetail
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Scheduledetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="ScheduleDetail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleId" />
            <input type="hidden" asp-for="StaffId" />

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Status</label>
                <div class="radio-buttons" style="display:flex; justify-content:space-around">
                    <label class="form-check-label">
                        <input type="radio" asp-for="Status" class="form-check-input" value="true" /> Active
                    </label>
                    <label class="form-check-label">
                        <input type="radio" asp-for="Status" class="form-check-input" value="false" /> Non-Active
                    </label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
